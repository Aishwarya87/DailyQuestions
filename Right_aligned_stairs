import math
import os
import random
import re
import sys

def staircase(n):
    i=1
    stairs=n-2 #Since,multiple arguments to print() adds a space
    for i in range(1,n):  
        print(' '*stairs, '#'*i)
        i+=1
        stairs-=1
    print('#' * n)
        

if __name__ == '__main__':
    n = int(input().strip())

    staircase(n)
